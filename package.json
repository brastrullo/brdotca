{
  "name": "brdotca",
  "version": "1.0.0",
  "description": "",
  "main": "./src/script.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "cleancss": "cleancss -o styles.min.css styles.css",
    "uglifyjs": "uglifyjs bundle.js -o bundle.min.js",
    "min:js": "npm run uglifyjs",
    "min:sass": "npm run cleancss",
    "build:js": "browserify src/script.js -d -o bundle.js",
    "build:sass": "node-sass --source-map true src/stylesheets/styles.scss styles.css",
    "watch:js": "nodemon -e js -w src/script.js -x \"npm run build:js\"",
    "watch:sass": "nodemon -e scss -w src/stylesheets -x \"npm run build:sass\"",
    "watch": "run-p watch:*",
    "eslint": "eslint src/script.js --fix",
    "minify": "run-p min:*",
    "posteslint": "npm run build:js",
    "publish": "run-p build:js build:sass",
    "serve": "nodemon ./server.js",
    "start": "run-p watch serve"
  },
  "express": {
    "target": "node"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "env"
          ]
        }
      ]
    ]
  },
  "nodemonConfig": {
    "verbose": true
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.1.2",
    "babel-preset-env": "^1.6.1",
    "babelify": "^8.0.0",
    "browser-sync": "^2.23.2",
    "browserify": "^14.5.0",
    "clean-css-cli": "^4.1.10",
    "eslint": "^4.14.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "node-sass": "^4.7.2",
    "uglify-js": "^3.3.4",
    "velocity-animate": "^1.5.0",
    "watchify": "^3.9.0"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "express": "^4.16.2",
    "nodemailer": "^4.4.1",
    "nodemon": "^1.14.7",
    "normalize.css": "^7.0.0",
    "npm": "^5.6.0",
    "npm-run-all": "^4.1.2"
  }
}
