{
  "name": "brdotca",
  "version": "1.0.0",
  "description": "",
  "main": "./src/script.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",

    "cleancss": "cleancss -o styles.min.css styles.css",
    "uglifyjs": "uglifyjs bundle.js -o bundle.min.js",

    "build:js": "browserify src/script.js -o bundle.js",
    "postbuild:js": "npm run uglifyjs",
    "build:sass": "node-sass --source-map true src/stylesheets/styles.scss styles.css",
    "postbuild:sass": "npm run cleancss",

    "watch:js": "watchify src/script.js -d -o bundle.js -v",
    "watch:sass": "nodemon -e scss -w src/stylesheets -x \"npm run build:sass\"",
    "watch": "run-p watch:*",

    "eslint": "eslint src/script.js --fix",
    "posteslint": "npm run build:js",

    "publish": "run-p build:js build:sass",
    "serve": "browser-sync start -s -f \"styles.min.css,bundle.min.js,index.html\"",
    "prestart": "npm run publish",
    "start": "run-p watch serve"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "env"
          ]
        }
      ]
    ]
  },
  "nodemonConfig": {
    "verbose": true
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^7.3.0",
    "browser-sync": "^2.18.13",
    "browserify": "^14.4.0",
    "clean-css-cli": "^4.1.10",
    "eslint": "^4.8.0",
    "eslint-config-airbnb-base": "^12.0.1",
    "eslint-plugin-import": "^2.7.0",
    "node-sass": "^4.5.3",
    "uglify-js": "^3.1.3",
    "velocity-animate": "^1.5.0",
    "watchify": "^3.9.0"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "nodemon": "^1.12.1",
    "normalize.css": "^7.0.0",
    "npm-run-all": "^4.1.1"
  }
}
